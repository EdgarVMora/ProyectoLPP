Procedimiento PresentacionEleccionP
inicio
continuar <- verdadero
	repita 
	llamar nueva_linea
	escriba "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
	llamar nueva_linea
	Escriba "|                    Puede buscar un articulo, elegiendo un numero                               |"
	llamar nueva_linea
	escriba "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
	llamar nueva_linea
	escriba "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
	llamar nueva_linea
	Escriba "|           1.- Marca        |   2.- Modelo        |   3.- Talla       |    4.-Seleccionar       |"
	llamar nueva_linea
	escriba "| - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -|"
	llamar nueva_linea
		//Codigo para buscar un articulo por sus datos especificos 
	lea busquedaEspecifica
	llamar nueva_linea
		si ( busquedaEspecifica = 1 ) entonces
			llamar nueva_linea
			Escriba "Escriba la marca que desea buscar"
			llamar nueva_linea
			lea articuloBuscado
			llamar nueva_linea
			llamar BuscarPorPlayeras(articuloBuscado)
			llamar nueva_linea
			SINO
				si (busquedaEspecifica = 2) entonces
				llamar nueva_linea
				Escriba "Escriba el Modelo que desea buscar"
				llamar nueva_linea
				lea articuloBuscado
				llamar nueva_linea
				llamar BuscarPorPlayeras(articuloBuscado)
				llamar nueva_linea
					SINO
						si (busquedaEspecifica = 3) entonces
						llamar nueva_linea
						Escriba "Escriba la Talla que desea buscar"
						llamar nueva_linea
						lea articuloBuscado
						llamar nueva_linea
						llamar BuscarPorPlayeras(articuloBuscado)
						llamar nueva_linea
						SINO
							si (busquedaEspecifica = 0 ) entonces
							llamar nueva_linea
							Escriba "Gracias por visitar KLON"
							continuar <- falso
								SINO
								llamar nueva_linea
								Escriba "Por favor ingrese un de las 3 opciones proporcionadas"
							Fin si 
						Fin Si
				Fin Si
			Fin Si
	Hasta (continuar = falso)
fin
