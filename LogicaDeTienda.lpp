Procedimiento BuscarPorPlayeras(cadena [50] articulo)
inicio 
encontrar <- falso
    Para i <- 1 Hasta 2 Haga
        Para j <- 1 Hasta 5 Haga
        //Se usa condicional si entonces para poder comparar variables y encontrar los articulos 
            Si vPlayeras.aLetrasMarcas[i, j] = articulo Entonces
            llamar nueva_linea
            	escriba "Accesorio encontrado:"
              	llamar MostrarProductosP()
                encontrar <- Verdadero
            Fin Si
        Fin Para
    Fin Para
    Para i <- 1 Hasta 2 Haga
        Para j <- 1 Hasta 5 Haga
            Si vPlayeras.aLetrasModelos[i, j] = articulo Entonces
            llamar nueva_linea
                escriba "Accesorio encontrado:"
                llamar MostrarProductosP()
                encontrar <- Verdadero
            Fin Si
        Fin Para
    Fin Para
    Para i <- 1 Hasta 2 Haga
        Para j <- 1 Hasta 5 Haga
            Si vPlayeras.aLetrasTallas[i, j] = articulo Entonces
            llamar nueva_linea
                escriba "Accesorio encontrado:"
                llamar MostrarProductosP()
                encontrar <- Verdadero
            Fin Si
        Fin Para
    Fin Para
    Si No encontrar entonces
    llamar nueva_linea
    Escriba "no se encontro el accesorio buscado" 
    Fin Si                           
fin
